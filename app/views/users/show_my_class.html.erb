<div class="row">
  <div class="container">
    <div class="col-12">
      <div class="well">
        <%= @sub_name %>
        <%= @subject_id %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="container">
    <div class="col-12">
      <div class="well">
        <table class="table">
          <h3>Student Details</h3>
          <%= @class.name %>
          <thead class="thead-default">
            <tr>
              <th>Name</th>
              <th>Roll No</th>
              <% if @sub_name == 'malayalam' %>
                <th>Malayalam</th>
              <% elsif @sub_name == 'english' %>
                <th>English</th>
              <% else %>
                <th>Hindi</th>
              <% end %>
                <th>Verify</th>
              </tr>
          </thead>
          <tbody>
            <%@students.each do |t|%>
              <tr>
              <td><%=t.name%></td>
              <td><%= t.role_no%></td>
              <% if @sub_name == 'malayalam' %>
                <td><%= t.malayalam%></td>
              <% elsif @sub_name == 'english' %>
                <td><%= t.english %></td>
              <% else %>
                <td><%= t.hindi%></td>
              <% end %>
              <td>
              <% if student_confirm(t.id,@subject_id) %>
                Pass
              <% else %>
               <%= link_to  'Approve' ,approve_student_path(:id =>t.id, :subject_id => @subject_id)%>
              <% end %>
              </td>
              </tr>
            <%end%>
          </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
